{
	"manifest_version": 3,
	"name": "Omniblade",
	"version": "1.0",
	"action": {
		"default_popup": "index.html"
	},
	"background": {
		"service_worker": "background.js"
	},
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"permissions": ["commands"],
	"commands": {
		"open-extension": {
			"suggested_key": {
				"default": "Ctrl+Shift+Q"
			},
			"description": "Open the extension popup"
		}
	}
}
